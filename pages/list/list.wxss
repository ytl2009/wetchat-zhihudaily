.list-news-item-container {
  background-color: #f2f2f2;
  width: 100%;
  padding-left: 8px;
  padding-right: 8px;
}

.list-news-item {
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 8px;
  padding-top: 8px;
  padding-right: 8px;
  padding-bottom: 8px;
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 8px;
  background-color: #fff;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
  height: 90px;
}

.list-news-item-left{
  justify-content: center;
}

.list-news-item-right{
  margin-left: 5px;
  width: 300px;
  justify-content: center;
}

.list-news-image{
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 50px;
}

.list-news-item-title{
  font-size: 16px;
}
